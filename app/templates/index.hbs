<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1 class="my-5 text-center">Welcome</h1>
      <div>
        <div class="form-group">
          <label for="email">Email address</label>
          {{input value=email type="email" class="form-control shadow-sm" id="email" aria-describedby="emailHelp"
            placeholder="Enter email"}}
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          {{input value=password type="password" class="form-control shadow-sm" id="password" placeholder="Password"}}
        </div>
        <div class="mt-5 form-group row">
          <div class="col-6 text-center">
            {{#link-to "sign-up" class="stretched-link align-middle"}}
              Sign up
            {{/link-to}}
          </div>
          <div class="col-6 text-center">
            <button {{action "login"}}class="btn btn-primary px-4 shadow-sm">Login</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>